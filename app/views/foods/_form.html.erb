      </div>
      <br />
      <div>
        <b><%= f.label :description %></b><br />
        <%= f.text_field :description, :size => 75 %>
      </div>
      <div>
        <b><%= f.label :store_section %></b><br />
        <%= f.collection_select :store_section_id, StoreSection.all, :id, :name, :include_blank => true %>
      </div>
    </fieldset>
    <div class="actions">
    	<br>
      <%= f.submit %>
    </div>
  </div>
<% end %>