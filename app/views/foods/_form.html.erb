<%= form_for(@food) do |f| %>
  <% if @food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="nested_form">
<fieldset>
	<legend><b>NEW FOOD</b></legend>
  <div>
    <b><%= f.label :name %></b><br />
    <%= f.text_field :name %>
  </div>
  <br />
  <div >
    <b><%= f.label :description %></b><br />
    <%= f.text_field :description, :size => 75 %>
  </div>
  </fieldset>
  </div>
  <% for label in Label.find(:all) %>
    <div>
      <%= check_box_tag "food[label_ids][]", label.id, @food.labels.include?(label) %>
      <%= label.name %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
