<body class="foods">
	
<br>
<div style="width: 900px">
<fieldset>
	<legend>
		<b>FOODS</b>
	</legend>
<table>
  <tr>
    <th align="left">Name</th>
    <th align="left">Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%= paginate @foods %>
<% @foods.each do |food| %>
  <tr>
    <td width="250"><%= food.name %></td>
    <td class="break-word" width="450"><%= food.description %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>

</table>
</fieldset>
</div>
</body>
