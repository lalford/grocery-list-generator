<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @grocery_list.name %>
</p>

<p>
  <b>RECIPES</b>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Quantity</th>
    </tr>
    <% for recipe in @grocery_list.grocery_list_recipes.sort! { |r1,r2| r1.name <=> r2.name } %>
      <tr>
        <td><%= glr.recipe.name %></td>
        <td><%= glr.quantity %></td>
      </tr>
    <% end %>
  </table>
</p>

<p>
  <b>A LA CARTE</b>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Unit</th>
    </tr>
    <% for glf in @grocery_list.grocery_list_foods.sort! { |glf1,glf2| glf1.food.name <=> glf2.food.name } %>
      <tr>
        <td><%= glf.food.name %></td>
        <td><%= glf.quantity %></td>
        <td><%= glf.unit.short_name if glf.unit %></td>
      </tr>
    <% end %>
  </table>
</p>

